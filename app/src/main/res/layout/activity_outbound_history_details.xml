<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.packing.OutboundHistoryDetails">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white"
        android:background="@color/primaryColor"
        android:id="@+id/toolbar"
        style="@style/ThemeOverlay.Material3.Toolbar.Surface">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:text="Details"/>

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/btn_history"
                style="@style/ToolbarButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"
                app:icon="@drawable/ic_settings_24"
                app:iconTint="@color/white"
                app:iconSize="24dp" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/secondaryTextLight"
            android:text="No. Outbound" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvReceiptNumber"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/minus" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/outboundDate"
            style="@style/TextAppearance.Material3.LabelSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/bt_destination"
            app:layout_constraintBottom_toTopOf="@id/bt_scan"
            android:orientation="vertical">

<!--            <SearchView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/search"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primaryColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/no"
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:layout_marginStart="4dp"
                        android:layout_width="27dp"
                        android:layout_height="wrap_content"
                        android:text="No."/>

                    <TextView
                        android:id="@+id/prodName"
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:text="Product"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/prodQty"
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:text="Qty"
                        android:textAlignment="textStart"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/prodDetect"
                        style="@style/TextAppearance.Material3.LabelSmall"
                        android:text="Detect"
                        android:textAlignment="textStart"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/gray_300"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:background="@color/gray_300"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:id="@+id/rvDetails"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>