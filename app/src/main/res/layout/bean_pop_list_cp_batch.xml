<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_batch_prediction_24"
        app:tint="@color/red_300"
        android:contentDescription="@string/no_description"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prodNumber"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:text="D22E0385.01.0303.015"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prodName"
            style="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/secondaryTextLight"
            android:text="1238 4 0537 DOUBLING"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Material3.LabelSmall"
            android:textColor="@color/secondaryTextLight"
            android:text="TOTAL" />
        <TextView
            android:id="@+id/totalBatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="0"/>

    </LinearLayout>
</LinearLayout>